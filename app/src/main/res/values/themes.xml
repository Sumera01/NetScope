<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base dark theme for NetScope -->
    <style name="Theme.NetScope.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">#009688</item> <!-- Teal -->
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#00695C</item>
        <item name="android:statusBarColor">#000000</item>
        <item name="android:navigationBarColor">#000000</item>
        <item name="android:windowBackground">#121212</item>
    </style>

    <!-- Version without ActionBar -->
    <style name="Theme.NetScope.Dark.NoActionBar" parent="Theme.NetScope.Dark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
